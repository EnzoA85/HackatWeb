<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="{{asset('images/hackathonLogo.png')}}" type="image/x-icon" /> 
		<!-- CSS only -->
		<link
		href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
		<!-- JavaScript Bundle with Popper -->
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{# LA NAVBAR #}
	</head>
	<body class="body">
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
			<div class="container-fluid">
				<a class="navbar-brand" href="{{path('app_home')}}">Hackat'Web</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav me-auto mb-2 mb-lg-0">
						<li class="nav-item">
							<a class="nav-link active" aria-current="page" href="{{path('app_agence')}}">L'Agence</a>
						</li>
						<li class="nav-item">
							<a class="nav-link active" aria-current="page" href="{{path('app_listeHackathon')}}">Les Hackatons</a>
						</li>
						<li class="nav-item">
							<a class="nav-link active" aria-current="page" href="{{path('app_inscription', {uc : "form" })}}">Inscriptions</a>
						</li>
					</ul>
					<div class="co">
						<ul class="nav">
							<li class="nav-item">
								<a class="nav-link" href="{{path('app_crÃ©ercompte', {uc : "validation" })}}" style="color:white">Sign Up</a>
							</li>
							<!-- Button trigger du modal de connexion -->
							<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#LoginModal">
								Login
							</button>
						</ul>
					</div>
				</div>
			</div>
		</nav>
		{% block body %}{% endblock %}
	</body>

	<!-- Modal -->
	<div class="modal fade" id="LoginModal" tabindex="-1" aria-labelledby="LoginModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalLabel">Connexion</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<form method="POST" action="{{path('app_login')}}">
					<div
						class="modal-body">
						<!--login -->
						<div class="form-group">
							<label for="exampleInputEmail1">Identifiant</label>
							<input type="email" name="_username" class="form-control" id="username" aria-describedby="emailHelp" placeholder="Enter email">
						</div>
						<!--mdp -->
						<div class="form-group">
							<label for="exampleInputPassword1">Password</label>
							<input type="password" name="_password" class="form-control" id="password" placeholder="Password">
						</div>
					</br>
					<!--mdp -->
					<div class="form-group">
						<center>
							<button type="submit" class="btn btn-primary">Se Connecter</button>
						</center>
					</div>
				</form>
			</div>
		</div>
	</html>
</html></div></div></div></html>
