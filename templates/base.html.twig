	<!-- Modal -->
	<div class="modal fade" id="LoginModal" tabindex="-1" aria-labelledby="LoginModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalLabel">Connexion</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>


				<form method="POST" action="{{path('app_login')}}">
					<div
						class="modal-body">
						<!--login, avec name= _username et value = la valeur transmise par le controller -->
						<div class="form-group">
							<label for="login">Identifiant</label>
							<input type="email" class="form-control" id="login" name="_username" value="" aria-describedby="emailHelp" placeholder="Enter email">
						</div>
						<!--mdp -->
						<div class="form-group">
							<label for="password">Password</label>
							<input type="password" class="form-control" id="password" name="_password" placeholder="Password">
						</div>
					</br>
					<!--mdp -->
					<div class="form-group">
						<center>
							<button type="submit" class="btn btn-primary">Se Connecter</button>
						</center>
					</div>
				</form>


			</div>
		</div>
	</html>
